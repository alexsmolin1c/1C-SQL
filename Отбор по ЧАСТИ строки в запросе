Функция НайтиСудПоИндексу(Индекс)
	
	СудАдрес = "";
	Запрос = Новый Запрос;
	Запрос.Текст = 
	"ВЫБРАТЬ
	|	СудебныеУчастки.Ссылка КАК Ссылка
	|ИЗ
	|	Справочник.СудебныеУчастки КАК СудебныеУчастки
	|ГДЕ
	|	СудебныеУчастки.Адрес ПОДОБНО &Индекс";
	
	Запрос.УстановитьПараметр("Индекс",  "%" + Индекс + "%");
	РезультатЗапроса = Запрос.Выполнить();
	
	Выборка = РезультатЗапроса.Выбрать();
	
	Если Выборка.Следующий() Тогда
		СудАдрес = Выборка.Получить().Адрес;	
    КонецЕсли;
	Возврат СудАдрес;			
КонецФункции
